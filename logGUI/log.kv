#:kivy 2.3.0


<LogTextInput>:
    halign: 'left'
    multiline: False
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'

<DateInput>:
    halign: 'left'
    multiline: False
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'
    hint_text: 'DD-MM-YYYY'

<FileChooser>:
    title: 'Select a file'
    size_hint: None, None
    size: 500, 400
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()


<LogPopup>:
    id: log_popup
    title: 'Error occured!'
    popup_text: popup_text
    size_hint: None, None
    size: 400, 250
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            halign: 'center'
            size: 200, 100
            id: popup_text
            text_size: self.width, None
            multiline: True

        Button:
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center_y': .5, 'center_x': .5}
            padding: 10
            spacing: 10
            text: 'Close'
            on_release: log_popup.dismiss()


<LogGrid>:
    cols: 1
    rows: 1


<SelectableLabel>:
    text_size: self.width, None
    halign: 'left'
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<LogLabel>:
    text_size: self.width, None
    halign: 'left'
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'


<RV>:
    default_size_hint: 1, 1
    viewclass: 'SelectableLabel'
    bar_width: 10
    scroll_type: ['bars', 'content']
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<LogWindow>:
    id: logwindow
    path: path
    start_date: start_date
    end_date: end_date
    host: host
    date: date
    time: time
    timezone: timezone
    status_code: status_code
    method: method
    resource: resource
    bytes: bytes
    rv: rv

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: (0.05 * root.height)
        padding: (0.04 * root.height)

        BoxLayout:
            size_hint: 1, 0.2
            spacing: 0.05 * self.parent.width

            LogGrid:
                size_hint: 0.7, 1
                BoxLayout:
                    pos: self.parent.pos

#======================================================PATH
                    LogGrid:
                        size_hint: 0.9, 0.4
                        pos_hint: {'center_y': .5}

                        LogTextInput:
                            id: path
                            hint_text: "Full path to file"
                            font_size: self.parent.height - 20

#======================================================LOAD
                    Button:
                        size_hint: 0.1, 0.4
                        pos_hint: {'center_y': .5}
                        text: "Load"
                        on_release: logwindow.show_file_chooser()

#======================================================OPEN
            LogGrid:
                size_hint: 0.3, 0.5
                pos_hint: {'center_y': .5}
                padding: (0.005 * root.width), (0.005 * root.height)
                Button:
                    text: "Open"
                    on_release: logwindow.load_file()


        BoxLayout:
            spacing: 0.05 * root.height

            BoxLayout:
                orientation: 'vertical'
                spacing: (0.05 * self.parent.height)
                padding: (0.04 * self.parent.height)
                size_hint: 0.6, 1

                BoxLayout:
                    size_hint: 1, 0.2
                    BoxLayout:
#======================================================FROM
                        LogLabel:
                            halign: 'center'
                            size_hint: 0.25, 1
                            text: "From:"
                        LogGrid:
                            size_hint: 0.75, 0.7
                            padding: (0.005 * root.width), (0.005 * root.height)
                            pos_hint: {'center_y': .5, 'center_x': .5}

                            DateInput:
                                id: start_date
                                size_hint: 1, 1
                                font_size: self.parent.height - 28
#======================================================TO
                    BoxLayout:
                        LogLabel:
                            halign: 'center'
                            text: "To:"
                            size_hint: 0.25, 1
                        LogGrid:
                            size_hint: 0.75, 0.7
                            padding: (0.005 * root.width), (0.005 * root.height)
                            pos_hint: {'center_y': .5, 'center_x': .5}

                            DateInput:
                                id: end_date
                                size_hint: 1, 1
                                font_size: self.parent.height - 28
#======================================================RV
                RV:
                    id: rv


            BoxLayout:
                padding: 0, (0.06 * self.parent.height)
                orientation: "vertical"
                size_hint: 0.4, 1

                BoxLayout:

#======================================================HOST
                    LogLabel:
                        size_hint: 0.3, 1
                        text: "Remote host:"

                    LogGrid:
                        size_hint: 0.7, 0.7
                        padding: (0.005 * root.width), (0.005 * root.height)
                        pos_hint: {'center_y': .5, 'center_x': .5}

                        LogTextInput:
                            id: host
                BoxLayout:
#======================================================DATE
                    LogLabel:
                        halign: "left"
                        size_hint: 0.3, 1
                        text: "Date:"
                    LogGrid:
                        size_hint: 0.7, 0.7
                        padding: (0.005 * root.width), (0.005 * root.height)
                        pos_hint: {'center_y': .5, 'center_x': .5}

                        LogTextInput:
                            id: date
                BoxLayout:
#======================================================TIME
                    BoxLayout:
                        LogLabel:
                            text: "Time:"
                            size_hint: 0.3, 1
                        LogGrid:
                            size_hint: 0.7, 0.7
                            padding: (0.005 * root.width), (0.005 * root.height)
                            pos_hint: {'center_y': .5, 'center_x': .5}

                            LogTextInput:
                                id: time
                    BoxLayout:
#======================================================TIMEZONE
                        LogLabel:
                            text: "Timezone:"
                            halign: 'center'
                            size_hint: 0.5, 1
                        LogGrid:
                            size_hint: 0.5, 0.7
                            padding: (0.005 * root.width), (0.005 * root.height)
                            pos_hint: {'center_y': .5, 'center_x': .5}

                            LogTextInput:
                                id: timezone
                BoxLayout:
#======================================================CODE
                    BoxLayout:
                        LogLabel:
                            text: "Status code:"
                            multiline: True
                            shorten: False
                        LogLabel:
                            id: status_code
#======================================================METHOD
                    BoxLayout:
                        LogLabel:
                            text: "Method:"
                            halign: 'center'
                        LogLabel:
                            id: method
                BoxLayout:
#======================================================RESOURCE
                    LogLabel:
                        text: "Resource:"
                        size_hint: 0.3, 1
                    LogGrid:
                        size_hint: 0.7, 0.7
                        padding: (0.005 * root.width), (0.005 * root.height)
                        pos_hint: {'center_y': .5, 'center_x': .5}

                        LogTextInput:
                            id: resource
                BoxLayout:
#======================================================SIZE
                    LogLabel:
                        text: "Size:"
                    LogLabel:
                        id: bytes