#:kivy 2.3.0


<LogTextInput>:
    halign: 'left'
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'


<LogGrid>:
    cols: 1
    rows: 1


<SelectableLabel>:
    text_size: self.width, None
    halign: 'left'
    valign: 'top'
    shorten: True
    ellipsis: True
    shorten_from: 'right'
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<RV>:
    default_size_hint: 1, 1
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<LogWindow>:
    id: logwindow
    path: path
    start_date: start_date
    end_date: end_date
    host: host
    date: date
    time: time
    timezone: timezone
    status_code: status_code
    method: method
    resource: resource
    bytes: bytes
    rv: rv

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: (0.05 * root.height)
        padding: (0.04 * root.height)

        BoxLayout:
            size_hint: 1, 0.2
            spacing: 0.05 * self.parent.width

            LogGrid:
                size_hint: 0.7, 1
                BoxLayout:
                    pos: self.parent.pos

                    LogGrid:
                        size_hint: 0.9, 0.4
                        pos_hint: {'center_y': .5}

                        LogTextInput:
                            id: path
                            font_size: self.parent.height - 20

                    Button:
                        size_hint: 0.1, 0.4
                        pos_hint: {'center_y': .5}
                        text: "Load"
                        on_release: logwindow.load_file()




            LogGrid:
                size_hint: 0.3, 0.6
                pos_hint: {'center_y': .5}
                padding: 0.1 * self.parent.height
                Button:
                    text: "Open"


        BoxLayout:
            spacing: 0.05 * root.height

            BoxLayout:
                orientation: 'vertical'
                spacing: (0.05 * self.parent.height)
                padding: (0.04 * self.parent.height)
                size_hint: 0.6, 1

                BoxLayout:
                    spacing: (0.05 * self.parent.width)
                    padding: (0.04 * self.parent.width)
                    size_hint: 1, 0.2
                    BoxLayout:
                        Label:
                            text: "From:"
                        LogGrid:
                            size_hint: 0.8, 0.9
                            pos_hint: {'center_y': .5}

                            LogTextInput:
                                id: start_date
                                size: self.parent.size
                                font_size: self.parent.height - 20

                    BoxLayout:
                        Label:
                            text: "To:"
                        LogGrid:
                            size_hint: 0.8, 0.9
                            pos_hint: {'center_y': .5}

                            LogTextInput:
                                id: end_date
                                size: self.parent.size
                                font_size: self.parent.height - 20
                RV:
                    id: rv


            BoxLayout:
                orientation: "vertical"
                size_hint: 0.4, 1
                spacing: (0.01 * self.parent.height)
                padding: (0.04 * self.parent.height)

                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    Label:
                        halign: "left"
                        text: "Remote host"
                    LogTextInput:
                        id: host
                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    Label:
                        halign: "left"
                        text: "Date"
                    LogTextInput:
                        id: date
                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    BoxLayout:
                        Label:
                            halign: "left"
                            text: "Time"
                        LogTextInput:
                            id: time
                    BoxLayout:
                        Label:
                            halign: "left"
                            text: "Timezone"
                        LogTextInput:
                            id: timezone
                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    BoxLayout:
                        Label:
                            halign: "left"
                            text: "Status code:"
                        Label:
                            id: status_code
                    BoxLayout:
                        Label:
                            halign: "left"
                            text: "Method"
                        Label:
                            id: method
                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    Label:
                        halign: "left"
                        text: "Resource"
                    LogTextInput:
                        id: resource
                BoxLayout:
                    spacing: (0.01 * self.parent.height)
                    padding: (0.01 * self.parent.height)

                    Label:
                        halign: "left"
                        text: "Size"
                    Label:
                        id: bytes